{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceRoot}/src",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///*": "http://localhost:4200/*"
            }
        }
    ]
}